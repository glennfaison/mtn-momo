{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [2, "always"],
        "comma-dangle": "error",
        "no-unused-expressions": "off"
    },
    "ignorePatterns": [
        "**/node_modules/**"
    ]
}